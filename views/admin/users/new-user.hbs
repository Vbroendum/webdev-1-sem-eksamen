<form action="/users" method="POST" class="input-form">

    <div class="form-group">
        <label for="firstname">Fornavn</label>
        <input type="text" id="first_name" name="first_name" required placeholder="Fornavn">
    </div>

    <div class="form-group">
        <label for="lastname">Efternavn</label>
        <input type="text" id="last_name" name="last_name" required placeholder="Efternavn">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" id="user_email" name="user_email" required placeholder="Email">
    </div>

    <div class="form-group">
        <label for="password">Kodeord</label>
        <input type="password" id="user_password" name="user_password" required placeholder="Kodeord">
    </div>

    <div class="form-group">
        <label for="role">Rolle</label>
        <select name="role_id" id="role">
            <option value="1">Admin</option>
            <option value="2">Reng√∏ringspersonale</option>
        </select>
    </div>

    <button type="submit" class="submit-btn">Opret bruger</button>

</form>
