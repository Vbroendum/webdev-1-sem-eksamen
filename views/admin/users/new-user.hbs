<form action="/users" method="POST" enctype="multipart/form-data" class="input-form">

    <div class="form-group double-input">
        <label for="navn">Navn</label>
        <div class="inputs-inline">
            <input type="text" id="user-name" name="user-name" required placeholder="Fornavn">
            <input type="text" id="user-lastname" name="user-lastname" required placeholder="Efternavn">
        </div>
    </div>

    <div class="form-group">
        <label for="kode">Kodeord</label>
        <input type="password" id="user-password" name="user-password" required placeholder="Kodeord">
    </div>

    <div class="form-group">
        <label for="rolle">Rolle</label>
        <select name="rolle" id="rolle">
            <option value="bruger">Bruger</option>
            <option value="administrator">Administrator</option>
        </select>
    </div>

    <button type="submit" class="submit-btn">Opret bruger</button>
</form>
